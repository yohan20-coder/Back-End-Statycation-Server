<div class="tab-pane fade show active" id="edit" role="tabpanel" aria-labelledby="nav-profile-tab">
    <div class="card shadow mb-4 mt-2">
    <div class="card-body">
    <form action="/admin/item/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Title</label>
          <input type="text" class="form-control" value="<%= item.title %>" name="title" required/>
        </div>
        <div class="form-group">
          <label for="name">Price</label>
          <input type="text" class="form-control" value="<%= item.price %>" name="price" required/>
        </div>
        <div class="form-group">
          <label for="name">City</label>
          <input type="text" class="form-control" value="<%= item.city %>" name="city" required/>
        </div>
        <div class="form-group">
            <label for="name">Category</label>
            <select class="form-control" name="categoryId" id="categoryId">
                <option value="<%= item.categoryId._id %>">---<%= item.categoryId.name %>---</option>
                <% for(let i = 0; i < category.length; i++){%>
                  <option value="<%= category[i].id %>"><%= category[i].name %></option>
                <% } %>
               
            </select>
          </div>
        <div class="form-group">
          <label for="name">Image</label>
          <input type="file" class="form-control" name="image" multiple/>
        </div>

        <div class="form-group">
            <label for="name">Description</label>
           <textarea class="form-control" name="about" cols="30" rows="6"><%= item.description %></textarea>
          </div>
      
    <button type=submit" class="btn btn-primary btn-sm">Save</button>
   
  </form>
</div>
</div>
</div>