<div class="tab-pane fade" id="add-item" role="tabpanel" aria-labelledby="nav-profile-tab">
    <div class="card shadow mb-4 mt-2">
    <div class="card-body">
    <form action="/admin/item" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Title</label>
          <input type="text" class="form-control" id="title" name="title" required/>
        </div>
        <div class="form-group">
          <label for="name">Price</label>
          <input type="text" class="form-control" id="price" name="price" required/>
        </div>
        <div class="form-group">
          <label for="name">City</label>
          <input type="text" class="form-control" id="city" name="city" required/>
        </div>
        <div class="form-group">
            <label for="name">Category</label>
            <select class="form-control" name="categoryId" id="categoryId">
                <option value="">--Pilih--</option>
                <% for(let i = 0; i < category.length; i++){%>
                  <option value="<%= category[i].id %>"><%= category[i].name %></option>
                <% } %>
               
            </select>
          </div>
        <div class="form-group">
          <label for="name">Image</label>
          <input type="file" class="form-control" name="image" multiple required/>
        </div>

        <div class="form-group">
            <label for="name">Description</label>
           <textarea class="form-control" name="about" cols="30" rows="6"></textarea>
          </div>
      
    <button type=submit" class="btn btn-primary btn-sm">Save</button>
   
  </form>
</div>
</div>
</div>